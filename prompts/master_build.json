{
  "description": "End-to-end build pipeline for Jacob Darling's professional brand assets and responsive site improvements",
  "instructions": [
    "This pipeline generates all branded assets: résumé (HTML + PDF), logo/monogram SVGs, preview layouts, and SVG exports.",
    "It integrates responsive design inspection tasks to surface UI/UX issues and suggest fixes.",
    "The résumé content is stored in data/resume.json, which includes Quick Wins for instant credibility.",
    "The build must be reproducible, CI/CD safe, and assistant-ready.",
    "All outputs should be placed in public/branding for easy deployment.",
    "Responsive design checks should validate desktop, tablet, and mobile breakpoints, flagging issues like text density, CTA hierarchy, and metric visibility."
  ],
  "commands": {
    "buildAllLocal": {
      "description": "Generate all assets locally",
      "steps": [
        "ts-node cli/generate-logo.ts public/branding/logo.svg",
        "ts-node cli/preview-layout.ts",
        "ts-node cli/build-resume.ts --theme modern --output public/branding/resume.html",
        "ts-node cli/export-resume-pdf.ts public/branding/resume.html public/branding/resume.pdf",
        "ts-node cli/svg-export.ts public/branding",
        "ts-node cli/responsive-check.ts --url https://www.bearcavemarketing.com --output reports/responsive.json"
      ]
    },
    "buildAllRemote": {
      "description": "Generate all assets via MCP server",
      "steps": [
        "ts-node cli/generate-logo.ts public/branding/logo.svg --remote",
        "ts-node cli/preview-layout.ts --remote",
        "ts-node cli/build-resume.ts --theme modern --output public/branding/resume.html --remote",
        "ts-node cli/export-resume-pdf.ts public/branding/resume.html public/branding/resume.pdf",
        "ts-node cli/svg-export.ts public/branding --remote",
        "ts-node cli/responsive-check.ts --url https://www.bearcavemarketing.com --output reports/responsive.json --remote"
      ]
    }
  },
  "ci_cd": {
    "github_actions": {
      "workflow_file": ".github/workflows/build.yml",
      "example": {
        "name": "Build Résumé, Branding Assets, and Responsive Report",
        "on": ["push"],
        "jobs": {
          "build": {
            "runs-on": "ubuntu-latest",
            "steps": [
              { "uses": "actions/checkout@v3" },
              { "uses": "actions/setup-node@v3", "with": { "node-version": "18" } },
              { "run": "npm install" },
              { "run": "npm run build:all" },
              {
                "uses": "actions/upload-artifact@v3",
                "with": {
                  "name": "branding-assets",
                  "path": "public/branding"
                }
              },
              {
                "uses": "actions/upload-artifact@v3",
                "with": {
                  "name": "responsive-report",
                  "path": "reports/responsive.json"
                }
              }
            ]
          }
        }
      }
    }
  }
}