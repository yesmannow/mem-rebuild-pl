{
  "description": "Master build pipeline for branded résumé and site assets",
  "instructions": [
    "This pipeline generates all branded assets: logo, preview, résumé (HTML + PDF), and SVG exports.",
    "It supports both local execution and remote MCP server execution.",
    "The résumé data is stored in data/resume.json and includes Quick Wins for instant credibility.",
    "The build should be reproducible, CI/CD safe, and assistant-ready."
  ],
  "commands": {
    "buildAllLocal": {
      "description": "Generate logo, preview, résumé HTML and PDF locally",
      "steps": [
        "ts-node cli/generate-logo.ts public/branding/logo.svg",
        "ts-node cli/preview-layout.ts",
        "ts-node cli/build-resume.ts --theme modern --output public/branding/resume.html",
        "ts-node cli/export-resume-pdf.ts public/branding/resume.html public/branding/resume.pdf",
        "ts-node cli/svg-export.ts public/branding"
      ]
    },
    "buildAllRemote": {
      "description": "Generate via MCP server and export assets",
      "steps": [
        "ts-node cli/generate-logo.ts public/branding/logo.svg --remote",
        "ts-node cli/preview-layout.ts --remote",
        "ts-node cli/build-resume.ts --theme modern --output public/branding/resume.html --remote",
        "ts-node cli/export-resume-pdf.ts public/branding/resume.html public/branding/resume.pdf",
        "ts-node cli/svg-export.ts public/branding --remote"
      ]
    }
  },
  "ci_cd": {
    "github_actions": {
      "workflow_file": ".github/workflows/build.yml",
      "example": {
        "name": "Build Résumé and Branding Assets",
        "on": ["push"],
        "jobs": {
          "build": {
            "runs-on": "ubuntu-latest",
            "steps": [
              { "uses": "actions/checkout@v3" },
              { "uses": "actions/setup-node@v3", "with": { "node-version": "18" } },
              { "run": "npm install" },
              { "run": "npm run build:all" },
              { "uses": "actions/upload-artifact@v3", "with": { "name": "branding-assets", "path": "public/branding" } }
            ]
          }
        }
      }
    }
  }
}