# Cloudflare Pages Headers Configuration
# This ensures proper MIME types for JavaScript modules and CSS
# IMPORTANT: More specific rules must come BEFORE general rules
# Rule priority: CSS files → JS files → Other assets → General rules

# CSS files - MUST come first to ensure correct MIME type
# These rules match Vite's output structure: /assets/*.css
/assets/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Fallback CSS rule for any CSS files not in /assets/
/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# JavaScript module files in assets folder - specific before general
# These rules match Vite's output structure: /assets/*.js
/assets/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# ES module files (.mjs) in assets folder
/assets/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Other assets (images, fonts, etc.) - don't override MIME type
# This rule comes after CSS/JS rules to avoid conflicts
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript module files (ES modules) - fallback for root-level JS
/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# ES module files (.mjs) - fallback for root-level MJS
/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# JSON files
/*.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Prevent MIME type sniffing - applies to all files
/*
  X-Content-Type-Options: nosniff

# Service Worker - must be served as JavaScript
/sw.js
  Content-Type: application/javascript; charset=utf-8
  Service-Worker-Allowed: /
  Cache-Control: no-cache

# HTML files
/*.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=0, must-revalidate
