# Cloudflare Pages Headers Configuration
# This ensures proper MIME types for JavaScript modules and CSS
# IMPORTANT: More specific rules must come BEFORE general rules

# CSS files - MUST come first to ensure correct MIME type
/assets/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files in assets folder - specific before general
/assets/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/assets/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Other assets (images, fonts, etc.) - don't override MIME type
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript and TypeScript files
/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/*.ts
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/*.tsx
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# JSON files
/*.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Prevent MIME type sniffing
/*
  X-Content-Type-Options: nosniff

# Service Worker
/sw.js
  Content-Type: application/javascript; charset=utf-8
  Service-Worker-Allowed: /
  Cache-Control: no-cache

# HTML files
/*.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: public, max-age=0, must-revalidate
