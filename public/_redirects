# Cloudflare Pages redirects for SPA routing
# All routes should fallback to index.html for client-side routing

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
  force = false
  conditions = {Role = ["admin"]}

# Explicit routes that should NOT redirect
[[redirects]]
  from = "/sw.js"
  to = "/sw.js"
  status = 200
  force = true

[[redirects]]
  from = "/robots.txt"
  to = "/robots.txt"
  status = 200
  force = true

[[redirects]]
  from = "/sitemap.xml"
  to = "/sitemap.xml"
  status = 200
  force = true

# Assets should be served directly
[[redirects]]
  from = "/assets/*"
  to = "/assets/:splat"
  status = 200
  force = true

# Images should be served directly
[[redirects]]
  from = "/images/*"
  to = "/images/:splat"
  status = 200
  force = true

