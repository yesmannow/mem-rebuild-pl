{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true, // Only emit declaration files for project references; Vite handles JS bundling
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*", "cli/utils/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "composite": true, // Enable composite mode
    "outDir": "./dist", // Specify output directory to prevent overwriting source files
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.json",
    "src/**/*.js",
    "public/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
