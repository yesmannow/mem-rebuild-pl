{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false, // Allow emit
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "vite/client"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": true // Enable composite mode
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/styles/motion-tokens.js" // Exclude this file to prevent overwrite
  ]
}
